/* ============================
   Grunddesign: Variablen, Reset, Basis
   ============================ */

:root {
  /* Farben */
  --bg: #0f1221;
  --bg-soft: #151936;
  --surface: #1b2047;
  --surface-2: #22285a;
  --text: #e9ebf7;
  --muted: #b8bde2;
  --accent: #ff5c5c;   /* warmes Rot passend zum Thema Essen */
  --accent-2: #ffb86b; /* orangefarbener Partner für Verläufe */
  --danger: #ff6b6b;   /* Fehlermeldungen/Fehlerfarbe */
  --danger-2: #ff3b3b; /* intensiverer Rotton */

  /* Abstände und Rundungen */
  --radius: 16px;
  --radius-sm: 12px;
  --radius-lg: 28px;

  /* Schatten für Tiefe */
  --shadow-1: 0 8px 24px rgba(0, 0, 0, 0.25);
  --shadow-2: 0 20px 50px rgba(0, 0, 0, 0.35);
}

*,
*::before,
*::after {
  box-sizing: border-box; /* verlässliche Größenberechnung */
}

html {
  scroll-behavior: smooth; /* sanftes Scrollen zu Ankern */
}

body {
  margin: 0;
  font-family: "Poppins", system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, "Noto Sans", "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji", sans-serif;
  color: var(--text);
  background:
    radial-gradient(1200px 800px at 10% -10%, #2a3070 0%, transparent 60%),
    radial-gradient(1200px 800px at 110% 10%, #3b1d5a 0%, transparent 55%),
    linear-gradient(180deg, var(--bg) 0%, #0b0e1a 100%);
}

/* Bereichsbreite und Ausrichtung */
.container {
  width: min(1100px, 92%);
  margin-inline: auto;
}

/* ============================
   Kopf/Navi: fixiert mit Glaseffekt
   ============================ */

.site-header {
  position: sticky;
  top: 0;
  z-index: 50;
  backdrop-filter: saturate(140%) blur(10px); /* Glaseffekt mit Weichzeichnen */
  background: linear-gradient(180deg, rgba(10, 12, 30, 0.8), rgba(10, 12, 30, 0.55));
  border-bottom: 1px solid rgba(255, 255, 255, 0.06);
  transition: background .2s ease, box-shadow .2s ease;
}

.site-header.scrolled {
  /* beim Scrollen dunkler und mit Schatten */
  background: linear-gradient(180deg, rgba(10, 12, 30, 0.92), rgba(10, 12, 30, 0.7));
  box-shadow: 0 6px 20px rgba(0,0,0,.25);
}

.header-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 68px;
  transition: min-height .2s ease;
}

.site-header.scrolled .header-inner {
  min-height: 58px;
}

.brand {
  display: inline-flex;
  align-items: baseline;
  gap: 6px;
  color: var(--text);
  text-decoration: none;
  font-weight: 700;
  letter-spacing: .2px;
}

.brand .logo {
  display: inline-grid;
  place-items: center;
  width: 38px;
  height: 38px;
  border-radius: 10px;
  background: linear-gradient(135deg, var(--accent), var(--accent-2));
  color: #0b0e1a;
  font-size: 18px;
  text-transform: uppercase;
  box-shadow: var(--shadow-1);
}

.brand .brand-rest {
  font-size: 18px;
  opacity: .95;
}

.main-nav {
  display: flex;
  gap: 16px;
}

.main-nav a {
  color: var(--text);
  text-decoration: none;
  padding: 10px 14px;
  border-radius: 10px;
  position: relative;
  transition: color .2s ease;
  font-weight: 500;
}

.main-nav a::after {
  /* dezente Unterstreichung bei Hover */
  content: "";
  position: absolute;
  inset-inline: 12px;
  bottom: 6px;
  height: 2px;
  border-radius: 2px;
  background: linear-gradient(90deg, var(--accent), var(--accent-2));
  transform: scaleX(0);
  transform-origin: left;
  transition: transform .25s ease;
}

.main-nav a:hover::after,
.main-nav a:focus-visible::after {
  transform: scaleX(1);
}

/* ============================
   Einstiegsbereich
   ============================ */

.hero {
  padding: 64px 0 24px;
}

.hero-grid {
  display: grid;
  grid-template-columns: 1.15fr .85fr;
  align-items: center;
  gap: clamp(24px, 4vw, 48px);
}

.hero-copy h1 {
  margin: 0 0 12px;
  font-size: clamp(28px, 4.2vw, 48px);
  line-height: 1.1;
  letter-spacing: .2px;
}

.hero-copy p {
  margin: 0 0 20px;
  color: var(--muted);
  font-size: clamp(16px, 2.1vw, 18px);
}

.hero-actions {
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
}

.btn {
  --btn-bg: var(--surface);
  --btn-fg: var(--text);
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  height: 44px;
  padding: 0 18px;
  border-radius: 12px;
  background: var(--btn-bg);
  color: var(--btn-fg);
  text-decoration: none;
  font-weight: 600;
  letter-spacing: .2px;
  border: 1px solid rgba(255,255,255,0.08);
  box-shadow: 0 6px 18px rgba(0,0,0,.25);
  transition: transform .18s ease, box-shadow .18s ease, background .18s ease, border-color .18s ease;
}

.btn:hover {
  transform: translateY(-1px);
  box-shadow: 0 10px 24px rgba(0,0,0,.3);
}

.btn:active {
  transform: translateY(0);
}

.btn-primary {
  --btn-bg: linear-gradient(135deg, var(--accent), var(--accent-2));
  --btn-fg: #0b0e1a;
  border-color: transparent;
}

.btn-ghost {
  background: transparent;
  border: 1px solid rgba(255,255,255,.18);
}

.hero-visual {
  position: relative;
  isolation: isolate; /* eigener Stapelkontext für Deko-Elemente */
}

.hero-visual::before {
  /* weicher Farbklecks hinter dem Bild als Dekoration */
  content: "";
  position: absolute;
  inset: -12%;
  z-index: -1;
  filter: blur(40px);
  background:
    radial-gradient(60% 60% at 20% 20%, rgba(255, 92, 92, .25), transparent 65%),
    radial-gradient(50% 50% at 80% 30%, rgba(255, 184, 107, .22), transparent 60%),
    radial-gradient(45% 45% at 50% 80%, rgba(88, 91, 219, .22), transparent 60%);
}

.hero-image {
  width: 100%;
  height: auto;
  display: block;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-2);
  /* leichte Maskierung für moderne Optik */
  -webkit-mask-image: radial-gradient(120% 120% at 100% 0%, #000 60%, transparent 100%);
          mask-image: radial-gradient(120% 120% at 100% 0%, #000 60%, transparent 100%);
}

/* ============================
   Sektionen: Abstände und Titel
   ============================ */

.section {
  padding: clamp(56px, 8vw, 88px) 0;
}

.section-alt {
  background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
  border-top: 1px solid rgba(255, 255, 255, 0.06);
  border-bottom: 1px solid rgba(255, 255, 255, 0.06);
}

.section-title {
  margin: 0 0 20px;
  font-size: clamp(24px, 3.2vw, 36px);
  letter-spacing: .2px;
}

.section-lead {
  margin: 0 0 26px;
  color: var(--muted);
}

/* ============================
   Speisekarte: Kartenraster
   ============================ */

.menu-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 18px;
  padding: 0;
  margin: 18px 0 0;
  list-style: none;
}

.menu-card {
  position: relative;
  background: linear-gradient(160deg, var(--surface) 0%, var(--surface-2) 100%);
  border: 1px solid rgba(255,255,255,0.06);
  border-radius: var(--radius);
  box-shadow: var(--shadow-1);
  overflow: clip;
  transition: transform .18s ease, box-shadow .18s ease, border-color .18s ease;
}

.menu-card::before {
  /* zarte Glanzlinie oben */
  content: "";
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, rgba(255,255,255,.10), transparent 35%);
  pointer-events: none;
}

.menu-card:hover {
  transform: translateY(-3px);
  box-shadow: 0 16px 40px rgba(0, 0, 0, 0.35);
  border-color: rgba(255,255,255,0.12);
}

.menu-card-inner {
  padding: 18px 16px 20px;
}

.menu-card h3 {
  margin: 0 0 6px;
  font-size: 18px;
}

.menu-card .desc {
  margin: 0 0 28px;
  color: var(--muted);
  font-size: 14.5px;
  min-height: 2.4em; /* ruhige Höhe für gleichmäßiges Layout */
}

.menu-card .price {
  position: absolute;
  top: 12px;
  right: 12px;
  font-weight: 700;
  padding: 6px 10px;
  border-radius: 999px;
  background: linear-gradient(135deg, var(--accent), var(--accent-2));
  color: #0b0e1a;
  box-shadow: 0 10px 20px rgba(255, 92, 92, .25);
  border: 1px solid rgba(0,0,0,.1);
}

/* ============================
   Formular: moderne, zugängliche Felder
   ============================ */

.form {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 16px;
  background: linear-gradient(160deg, rgba(255,255,255,.02), rgba(255,255,255,.01));
  border: 1px solid rgba(255,255,255,.06);
  border-radius: var(--radius);
  padding: 18px;
  box-shadow: var(--shadow-1);
}

.form-field {
  display: grid;
  gap: 8px;
}

.form-field--full {
  grid-column: 1 / -1; /* über die gesamte Breite */
}

.form label,
.form legend {
  font-weight: 600;
  font-size: 14px;
}

.form input[type="text"],
.form input[type="tel"],
.form input[type="number"],
.form textarea {
  width: 100%;
  height: 44px;
  padding: 10px 12px;
  border-radius: 12px;
  color: var(--text);
  background: rgba(255,255,255,0.04);
  border: 1px solid rgba(255,255,255,0.12);
  outline: none;
  transition: border-color .18s ease, box-shadow .18s ease, background .18s ease;
}

.form textarea {
  height: auto;
  min-height: 110px;
  resize: vertical; /* Höhe darf angepasst werden */
}

.form input::placeholder,
.form textarea::placeholder {
  color: #cbd1f0a8;
}

.form input:focus,
.form textarea:focus {
  border-color: rgba(255,255,255,0.28);
  box-shadow: 0 0 0 4px rgba(255, 92, 92, .18);
  background: rgba(255,255,255,0.06);
}

/* optisches Feedback für ungültige Felder */
.form input:invalid {
  border-color: rgba(255, 107, 107, 0.8);
  box-shadow: 0 0 0 3px rgba(255, 107, 107, 0.2);
}

.hint {
  color: var(--muted);
  font-size: 12px;
}

/* Fehlermeldungstext direkt unter dem Feld */
.error-text {
  color: var(--danger);
  font-size: 12.5px;
}

/* Radio-Gruppe */
.radio-group {
  display: flex;
  gap: 14px;
  flex-wrap: wrap;
  margin-top: 6px;
}

.radio {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 8px 12px;
  background: rgba(255,255,255,0.04);
  border: 1px solid rgba(255,255,255,0.12);
  border-radius: 999px;
  cursor: pointer;
  transition: background .18s ease, border-color .18s ease;
  user-select: none;
}

.radio:hover {
  background: rgba(255,255,255,0.06);
  border-color: rgba(255,255,255,0.18);
}

.radio input[type="radio"] {
  /* systemeigene Darstellung farblich anpassen */
  accent-color: #ff7a6a;
}

.form-actions {
  grid-column: 1 / -1;
  display: flex;
  justify-content: flex-end;
  margin-top: 6px;
}

/* ============================
   Benachrichtigung unten rechts
   ============================ */

.toast {
  position: fixed;
  right: 24px;
  bottom: 24px;
  z-index: 100;
  max-width: min(340px, 86vw);
  padding: 14px 16px;
  border-radius: 14px;
  color: #0b0e1a;
  background: linear-gradient(135deg, var(--accent), var(--accent-2));
  box-shadow: 0 16px 40px rgba(0,0,0,.35);
  border: 1px solid rgba(0,0,0,.06);
  transform: translateY(16px) scale(.98);
  opacity: 0;
  pointer-events: none;
  transition: opacity .2s ease, transform .2s ease;
}

.toast.show {
  opacity: 1;
  transform: translateY(0) scale(1);
}

/* ============================
   Einblend-Animation beim Scrollen
   ============================ */

.reveal {
  opacity: 0;
  transform: translateY(14px) scale(.98);
  transition: opacity .6s cubic-bezier(.22,.65,.32,1), transform .6s cubic-bezier(.22,.65,.32,1);
  will-change: opacity, transform;
}

.reveal.reveal-in {
  opacity: 1;
  transform: none;
}

/* ============================
   Fußbereich
   ============================ */

.site-footer {
  padding: 32px 0 48px;
  color: var(--muted);
  text-align: center;
  border-top: 1px solid rgba(255,255,255,0.06);
  background: linear-gradient(0deg, rgba(255,255,255,.02), transparent);
}

/* ============================
   Responsiv: kleinere Bildschirme
   ============================ */

@media (max-width: 980px) {
  .hero-grid {
    grid-template-columns: 1fr;
  }
  .hero {
    padding-top: 28px;
  }
}

@media (max-width: 720px) {
  .form {
    grid-template-columns: 1fr;
  }
  .main-nav a {
    padding: 8px 10px;
  }
}

/* Bewegungs-Reduktion entsprechend Systemeinstellung */
@media (prefers-reduced-motion: reduce) {
  html { scroll-behavior: auto; }
  .reveal { transition: none; transform: none; opacity: 1; }
  .btn, .menu-card, .site-header { transition: none; }
}